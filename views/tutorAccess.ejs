<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Batch Students</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f0f7ff;
      }
      .hover-row {
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <%-include("staffMenu")%>

    <div class="container mt-5">
      <h2 class="text-center">Students in Batch: <%= batch %></h2>

      <!-- Success/Error Message -->
      <div
        id="responseMessage"
        class="alert d-none alert-dismissible fade show"
        role="alert"
      >
        <span id="responseText"></span>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>

      <% if (students.length > 0) { %>
      <table class="table table-striped table-bordered mt-4" id="studentsTable">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Roll Number</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
          <tr class="hover-row">
            <!-- Student name with clickable link -->
            <td>
              <a
                href="/studentDetails/<%= student.id %>"
                class="text-decoration-none"
              >
                <%= student.name %>
              </a>
            </td>
            <td><%= student.rollNumber %></td>
            <td><%= student.email %></td>
            <td>
              <!-- Reset Password Button -->
              <button
                class="btn btn-danger btn-sm reset-btn"
                data-id="<%= student.id %>"
              >
                Reset Password
              </button>
              <!-- Delete Student Button -->
              <button
                class="btn btn-danger btn-sm delete-btn"
                data-email="<%= student.email %>"
              >
                Delete
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <p class="text-center mt-4">No students found in this batch.</p>
      <% } %>

      <a href="/staff/profile" class="btn btn-secondary mt-3"
        >Back to Profile</a
      >
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const responseMessage = document.getElementById("responseMessage");
      const responseText = document.getElementById("responseText");

      // Handle Password Reset via AJAX
      document.querySelectorAll(".reset-btn").forEach((button) => {
        button.addEventListener("click", () => {
          const studentId = button.getAttribute("data-id");

          fetch("/resetStudPassword", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ id: studentId }),
          })
            .then((response) => response.json())
            .then((data) => {
              // Update the message and display it
              responseMessage.className =
                "alert alert-dismissible fade show " +
                (data.success ? "alert-success" : "alert-danger");
              responseText.innerText = data.message;
              responseMessage.classList.remove("d-none");
            })
            .catch((err) => {
              // Handle any errors
              responseMessage.className =
                "alert alert-dismissible fade show alert-danger";
              responseText.innerText = "An error occurred. Please try again.";
              responseMessage.classList.remove("d-none");
            });
        });
      });
      // Handle Delete Student via AJAX
      document.querySelectorAll(".delete-btn").forEach((button) => {
        button.addEventListener("click", () => {
          const email = button.getAttribute("data-email");

          fetch(`/deleteStudent/${email}`, {
            method: "DELETE",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email }),
          })
            .then((response) => response.json())
            .then((data) => {
              // Update the message and display it
              responseMessage.className =
                "alert alert-dismissible fade show " +
                (data.success ? "alert-success" : "alert-danger");
              responseText.innerText = data.message;
              responseMessage.classList.remove("d-none");

              if (data.success) {
                // Remove student row from table without reload
                button.closest("tr").remove();
              }
            })
            .catch((err) => {
              responseMessage.className =
                "alert alert-dismissible fade show alert-danger";
              responseText.innerText = "An error occurred. Please try again.";
              responseMessage.classList.remove("d-none");
            });
        });
      });
    </script>
  </body>
</html>
